<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.epam.vote.repository.IRestaurantRepository">
    <resultMap id="RestaurantResultMap" type="Restaurant">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="address" property="address"/>
        <result column="created_user" property="createdUser"/>
        <result column="updated_user" property="updatedUser"/>
        <result column="created_date" property="createdDate"/>
        <result column="updated_date" property="updatedDate"/>
        <result column="record_version" property="recordVersion"/>
    </resultMap>

    <select id="findAllRestaurants" resultMap="RestaurantResultMap">
        select
            id,
            name,
            address
        from epam.restaurant
    </select>

    <insert id="createRestaurant" parameterType="Restaurant">
        insert into epam.restaurant(
                id,
                name,
                address,
                created_user,
                record_version)
        values (
                #{id},
                #{name},
                #{address},
                #{createdUser},
                #{recordVersion});
    </insert>

    <select id="findByRestaurantId" resultMap="RestaurantResultMap">
        select
            id,
            name,
            address,
            created_user,
            record_version
        from epam.restaurant
        where id = #{id}
    </select>
</mapper>
