<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.epam.vote.repository.IMenuRepository">
    <resultMap id="MenuResultMap" type="Menu">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="price" property="price"/>
        <result column="created_user" property="createdUser"/>
        <result column="updated_user" property="updatedUser"/>
        <result column="created_date" property="createdDate"/>
        <result column="updated_date" property="updatedDate"/>
        <result column="record_version" property="recordVersion"/>
    </resultMap>

    <select id="findMenuOfRestaurant" resultMap="MenuResultMap">
        select
            d.id,
            d.name,
            rd.price
        from epam.dish as d
        inner join epam.restaurant_dish_map as rd on d.id = rd.dish_id
        inner join epam.restaurant as r on r.id = rd.restaurant_id
        where r.id = #{restaurantId}
    </select>

    <insert id="saveMenu" parameterType="Menu">
        insert into epam.dish(
                id,
                name,
                created_user)
        values (
                #{id},
                #{name},
                #{created_user});
    </insert>
</mapper>
